@model IList<AcmeCursos.Models.Curso>
@using AcmeCursos.Models;
@{
    ViewBag.Title = "Cursos";
}

@if (TempData["Mensagem"] != null)
{
    <br />
    <p class="alert alert-success">@TempData["Mensagem"]</p>
}

<h2>Cursos</h2>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Novo", "Create", "Curso", null, new { @class = "btn btn-success pull-left", role = "button" })
    </div>
</div>

<div></div>

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table table-responsive">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center"><small>#</small></th>
                            <th><small>Nome</small></th>
                            <th><small>Descrição</small></th>
                            <th><small>Data Limite de Inscri&ccedil;&aacute;o</small></th>
                            <th> </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (Curso curso in Model)
                        {
                            <tr>
                                <td class="text-center"><small>@curso.Id</small></td>
                                <td><small>@curso.Nome</small></td>
                                <td><small>@curso.Descricao</small></td>
                                <td><small>@curso.DataLimiteInscricao</small></td>
                                <td>
                                    <div class="pull-right">
                                        @Html.ActionLink(" ", "Details", "Curso", new { id = curso.Id }, new { @class = "glyphicon glyphicon-search", title = "Detalhar" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "Edit", "Curso", new { id = curso.Id }, new { @class = "glyphicon glyphicon-pencil", title = "Editar" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "Delete", "Curso", new { id = curso.Id }, new { @class = "glyphicon glyphicon-remove", title = "Excluir" })
                                    </div>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <br/>
            <p class="alert alert-info">Não existem cursos cadastrados.</p>
        }
    </div>

</div>
