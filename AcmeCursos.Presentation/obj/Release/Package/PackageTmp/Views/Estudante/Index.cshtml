@model IList<AcmeCursos.Models.Estudante>
@using AcmeCursos.Models;
@{
    ViewBag.Title = "Estudantes";
}

@if (TempData["Mensagem"] != null)
{
    <p class="alert alert-success">@TempData["Mensagem"]</p>
}

<h2>Estudantes</h2>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Novo", "Create", "Estudante", null, new { @class = "btn btn-success pull-left", role = "button" })
    </div>
</div>

<div></div>

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table table-responsive">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center"><small>#</small></th>
                            <th><small>Nome</small></th>
                            <th><small>Sobrenome</small></th>
                            <th><small>Data de Inscri&ccedil;&aacute;o</small></th>
                            <th> </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (Estudante estudante in Model)
                        {
                            <tr>
                                <td class="text-center"><small>@estudante.Id</small></td>
                                <td><small>@estudante.Nome</small></td>
                                <td><small>@estudante.SobreNome</small></td>
                                <td><small>@estudante.DataMatricula</small></td>
                                <td>
                                    <div class="pull-right">
                                        @Html.ActionLink(" ", "Details", "Estudante", new { id = estudante.Id }, new { @class = "glyphicon glyphicon-search", title = "Detalhar" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "Edit", "Estudante", new { id = estudante.Id }, new { @class = "glyphicon glyphicon-pencil", title = "Editar" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "Delete", "Estudante", new { id = estudante.Id }, new { @class = "glyphicon glyphicon-remove", title = "Excluir" })
                                    </div>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="alert alert-info">Não existem estudantes cadastrados.</p>
        }
    </div>

</div>


