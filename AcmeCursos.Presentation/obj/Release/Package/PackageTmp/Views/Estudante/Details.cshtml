@model AcmeCursos.Models.Estudante

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

@if (Model != null)
{
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SobreNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SobreNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataMatricula)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataMatricula)
        </dd>

    </dl>
    <br />

    <div class="row">
        <div class="col-md-12">
            @if (Model.Inscricoes != null && Model.Inscricoes.Count > 0)
            {
                @Html.DisplayFor(model => model.Inscricoes)
            }
            else
            {
                <p class="alert alert-info"> Aluno sem nenhuma inscrição.</p>
            }

        </div>
    </div>

}
else
{
    <p class="alert alert-info">Estudante não cadastrado.</p>
}

<br />
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            @Html.ActionLink("Editar", "Edit", "Estudante", new { id = Model.Id }, new { @class = "btn btn-success ", role = "button" }) &nbsp;&nbsp;
            @Html.ActionLink("Voltar", "Index", "Estudante", null, new { @class = "btn btn-default", role = "button" })
        </div>
    </div>
</div>

